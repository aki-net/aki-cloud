server {
    listen {{ .EdgeIP }}:80;
    server_name {{ .Domain }};

    access_log /var/log/nginx/{{ .Domain }}.access.log combined;
    error_log  /var/log/nginx/{{ .Domain }}.error.log warn;

    proxy_connect_timeout 5s;
    proxy_send_timeout 60s;
    proxy_read_timeout 60s;

    location ^~ /.well-known/acme-challenge/ {
        default_type text/plain;
        proxy_pass http://127.0.0.1:8080$request_uri;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
    }

    {{- if .RedirectHTTP }}
    location / {
        return 301 https://$host$request_uri;
    }
    {{- else }}
    location / {
        proxy_pass {{ .ProxyPass }};
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header Connection "";
        proxy_http_version 1.1;
        {{- if .ForceHTTPFallback }}
        proxy_intercept_errors on;
        error_page 301 302 307 308 = @force_http_stub_{{ .FallbackLabel }};
        {{- else }}
        proxy_intercept_errors off;
        {{- end }}
        proxy_buffering on;
    }
    {{- end }}
}

{{- if .HasCertificate }}
server {
    listen {{ .EdgeIP }}:443 ssl http2;
    server_name {{ .Domain }};

    access_log /var/log/nginx/{{ .Domain }}.access.log combined;
    error_log  /var/log/nginx/{{ .Domain }}.error.log warn;

    ssl_certificate {{ .CertPath }};
    ssl_certificate_key {{ .KeyPath }};
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;
    ssl_protocols TLSv1.2 TLSv1.3;

    proxy_connect_timeout 5s;
    proxy_send_timeout 60s;
    proxy_read_timeout 60s;

    location ^~ /.well-known/acme-challenge/ {
        default_type text/plain;
        proxy_pass http://127.0.0.1:8080$request_uri;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
    }

    location / {
        proxy_pass {{ .ProxyPass }};
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header Connection "";
        proxy_http_version 1.1;
        proxy_intercept_errors off;
        proxy_buffering on;
        {{- if .OriginIsHTTPS }}
        proxy_ssl_server_name on;
        proxy_ssl_name {{ .OriginServerName }};
        {{- if .VerifyOrigin }}
        proxy_ssl_verify on;
        {{- else }}
        proxy_ssl_verify off;
        {{- end }}
        {{- if .StrictOriginPull }}
        proxy_ssl_certificate {{ .OriginPullCert }};
        proxy_ssl_certificate_key {{ .OriginPullKey }};
        {{- end }}
        {{- end }}
    }
}
{{- end }}

{{- if .ForceHTTPFallback }}
location @force_http_stub_{{ .FallbackLabel }} {
    default_type text/plain;
    return 200 "aki-cloud temporary http response\n";
}
{{- end }}
