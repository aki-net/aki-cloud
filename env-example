# Backend configuration
BACKEND_PORT=8080
FRONTEND_PORT=3000
FRONTEND_API_BASE=http://YOUR_IP:8080

# Node identification
# NODE_ID is auto-generated deterministically based on:
# - Cluster ID (SHA256 of CLUSTER_SECRET, first 16 chars)
# - Node name (lowercase)
# Formula: SHA256("cluster:{cluster_id}:node:{node_name_lower}")
NODE_ID=auto-generated
NODE_NAME=node-1

# Secrets (must be consistent across cluster)
JWT_SECRET=your-jwt-secret-here
CLUSTER_SECRET_FILE=/data/cluster/secret

# Performance tuning
SYNC_INTERVAL_SECONDS=15
RELOAD_DEBOUNCE_MS=1500
