# Backend configuration
BACKEND_PORT=8080
FRONTEND_PORT=3000
FRONTEND_API_BASE=http://YOUR_IP:8080

# Node identification
# NODE_ID is auto-generated deterministically from CLUSTER_SECRET + NODE_NAME
# No need to specify it in .env
NODE_NAME=node-1

# Secrets (must be consistent across cluster)
JWT_SECRET=your-jwt-secret-here
CLUSTER_SECRET_FILE=/data/cluster/secret

# Performance tuning
SYNC_INTERVAL_SECONDS=15
RELOAD_DEBOUNCE_MS=1500
